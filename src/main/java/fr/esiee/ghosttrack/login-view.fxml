<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.esiee.ghosttrack.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="GhostTrack" textFill="#3a0ca3">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Système de gestion des manifestations paranormales" textFill="#333333">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label text="Connexion" textFill="#3a0ca3">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Identifiant:" prefWidth="80.0" />
            <TextField fx:id="loginField" promptText="Votre identifiant" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Mot de passe:" prefWidth="80.0" />
            <PasswordField fx:id="passwordField" promptText="Votre mot de passe" HBox.hgrow="ALWAYS" />
        </HBox>

        <Button defaultButton="true" onAction="#onLoginButtonClick" style="-fx-background-color: #3a0ca3; -fx-text-fill: white;" text="Se connecter" />
    </VBox>

    <Label text="© 2025 GhostTrack - Tous droits réservés" textFill="#666666">
        <font>
            <Font size="10.0" />
        </font>
    </Label>
</VBox>